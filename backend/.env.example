# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB installation
# MONGODB_URI=mongodb://localhost:27017/weight_tracker

# For MongoDB with authentication
MONGODB_URI=mongodb://dev:devpass@localhost:27017/weight_tracker

# For MongoDB Atlas
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/weight_tracker

# For Docker container-to-container communication (used by docker-compose)
# MONGODB_URI=mongodb://admin:password@mongodb:27017/weight_tracker

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes